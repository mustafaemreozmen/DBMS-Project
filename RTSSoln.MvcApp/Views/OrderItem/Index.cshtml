@model IEnumerable<OrderItem>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    <div class="col-md-12">
        <a class="btn btn-sm btn-outline-success" asp-controller="OrderItem" asp-action="Insert">Ekle</a>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ürün Id</th>
                    <th scope="col">Sipariş Id</th>
                    <th scope="col">Notlar</th>
                    <th scope="col">Oluşturulma Tarihi</th>
                    <th scope="col">Oluşturan</th>
                    <th scope="col">Güncelleme Tarihi</th>
                    <th scope="col">Güncelleyen</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ProductId</td>
                        <td>@item.OrderId</td>
                        <td>@item.Notes</td>
                        <td>@item.Created</td>
                        <td>@item.Creator</td>
                        <td>@item.Modified</td>
                        <td>@item.Modifier</td>
                        <td>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="OrderItem" asp-action="Delete" asp-route-orderItemId="@item.Id">Sil</a>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="OrderItem" asp-action="Update" asp-route-orderItemId="@item.Id">Güncelle</a>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>